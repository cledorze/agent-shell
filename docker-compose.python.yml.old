version: '3.8'

services:
  agent-system:
    build: ./agent-system
    ports:
      - "8082:8082"
    environment:
      - KNOWLEDGE_SYSTEM_URL=http://knowledge-system:8084
      - COMMAND_EXECUTOR_URL=http://command-executor:8085
      - DRY_RUN=false
      - DIRECT_EXECUTION=true
      - DATA_DIR=/app/data
      - DEBUG_LEVEL=DEBUG
      - VERBOSE_LEVEL=3
      - COLOR_OUTPUT=true
      - COMMAND_TIMEOUT=60
      - OLLAMA_HOST=100.100.100.160
      - OLLAMA_PORT=11434
      - OLLAMA_MODEL=ALIENTELLIGENCE/linuxcmdxpert
      - LIBVIRT_URI=qemu:///system
    volumes:
      - agent_data:/app/data
      - /run/libvirt:/run/libvirt:ro
      - /var/run/libvirt:/var/run/libvirt:ro
    restart: unless-stopped

  knowledge-system:
    build: ./knowledge-system
    ports:
      - "8084:8084"
    environment:
      - DATA_DIR=/app/data
    volumes:
      - knowledge_data:/app/data
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  command-executor:
    image: alpine:latest
    command: sh -c "apk add --no-cache python3 && python3 -m http.server 8085"
    ports:
      - "8085:8085"
    restart: unless-stopped
  vm-manager:
    build: ./vm-manager
    ports:
      - "8083:8083"
    environment:
      - VM_MANAGER_PORT=8083
      - VM_DATA_DIR=/app/data/vms
      - VM_TEMPLATE_PATH=/app/data/templates/opensuse-tumbleweed.qcow2
      - LIBVIRT_URI=qemu:///system
      - NGROK_AUTH_TOKEN=${NGROK_AUTH_TOKEN}
      - NGROK_REGION=${NGROK_REGION}
    volumes:
      - vm_data:/app/data
      - /var/run/libvirt/libvirt-sock:/var/run/libvirt/libvirt-sock
      - /var/lib/libvirt/images:/var/lib/libvirt/images:ro
    privileged: true
    restart: unless-stopped

volumes:
  agent_data:
  knowledge_data:
